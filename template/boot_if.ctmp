boot_status_t boot_if_init(void)
{
    boot_status_t status = eBOOT_OK;


    return status;
}


boot_status_t boot_if_transmit(const uint8_t * const p_data, const uint16_t size)
{
    boot_status_t status = eBOOT_OK;

    // Unused
    (void) size;
    (void) p_data;

    return status;
}

boot_status_t boot_if_receive(uint8_t * const p_data)
{
    boot_status_t status = eBOOT_OK;

    // Unused
    (void) p_data;

    return status;
}

